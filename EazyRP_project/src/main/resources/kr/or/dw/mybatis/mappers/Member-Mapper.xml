<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.dw.dao.MemberDAO">
	
	<select id="selectMemberById" parameterType="str" resultType="member">
	<!-- MemberDAO.selectMemberById -->
		SELECT *
		  FROM member
		 WHERE id = #{id}
	</select>
	
	<insert id="insertMember" parameterType="member">
		INSERT INTO member(u_no, id, pwd, email, tel, birth, name, addr, enabled, regdate)
		VALUES(member_seq.nextVal, #{id}, #{pwd}, #{email}, #{tel}, #{birth}, #{name}, #{addr}, 1, SYSDATE)
	</insert> 
	
	<select id="selectErank" parameterType="int" resultType="String">
		SELECT e_rank
		  FROM emp
		 WHERE u_no = #{u_no}
	</select>
	
	<select id="selectPWFind" resultType="String">
		SELECT u_no
		  FROM member
		 WHERE id = #{id}
		   AND email = #{email}
	</select>	

	<select id="selectIDFind" resultType="member">
		SELECT u_no
		  FROM member
		 WHERE name = #{name}
		   AND email = #{email}
	</select>	
	
	<update id="updatePwd" parameterType="member">
		UPDATE member 
		SET pwd = #pwd# 
		 WHERE  u_no = #{u_no}
	</update>
	
	<!-- <select id="selectAllMemberList" resultType="member">
